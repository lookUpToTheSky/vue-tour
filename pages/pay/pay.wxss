.pay-container{
  width: 100%;
  padding-bottom: 200rpx;
  background: #f5f5f5;
}
.address {
  position: relative;
  width: 100%;
  height: 220rpx;
  background: #f5f5f5;
  padding: 0 40rpx; 
  box-sizing: border-box;
  overflow: hidden;
  margin-bottom: 40rpx;
}
.addressInfo{
  display: flex;
  color: red;
  font-size: 40rpx;
}
.addressInfo .nullAddress{
  flex: 1;
  margin-top: 80rpx;
  font-size: 46rpx; 
}
.user{
  width: 500rpx;
  padding: 20rpx;
  font-size: 32rpx;
  color: #333;
  overflow: auto;
}
.user>view{
  display: flex;
  justify-content: space-between;
  height:80rpx;
  overflow: hidden;
  line-height: 80rpx;
}
.address image{
  margin-top: 60rpx;
  width: 80rpx;
  height: 80rpx;
}
.line{
  position: absolute;
  display: flex;
  bottom: 0;
  left: 0;
}
.line view:nth-child(odd){
  margin-right: 60rpx;
  width: 60rpx;
  height: 6rpx;
  background: violet;
}
.line view:nth-child(even){
  margin-right: 60rpx;
  width: 60rpx;
  height: 6rpx;
  background: deepskyblue;
}
.title{
  position: relative;
  width: 100%;
  line-height: 80rpx;
  margin-left:40rpx;
  border-bottom: 2rpx solid #ccc;
  }
.title text{
  margin-left: 60rpx;
}
.title image{
  position: absolute;
  top: 10rpx;
  width: 60rpx;
  height: 60rpx;
}
.goodsInfo {
  position: relative;
  width: 95%;
  height: 200rpx;
  overflow: hidden;
  box-sizing: margin-box;
  margin-left:40rpx; 
  padding: 20rpx 0;
  background: #fff;
  border-bottom: 2rpx solid #ccc;
}
.goodsInfo image:nth-child(1){
  float: left;
  width: 200rpx;
  height: 200rpx;
}
.info {
  display: flex;
  padding-left:20rpx;
}
.info .name{
  flex: 1;
  height: 50rpx;
  font-size: 30rpx;
}
.info .num{
  width: 120rpx;
  display: flex;
  flex-direction: column;
  margin-right: 20rpx;
  font-size: 30rpx;
  text-align: center;
  color: red;
}
.info .buyNum{
  float: right;
  color: #666;
  margin-top: 100rpx;
}
.order-detai{
  width: 100%;
  background: #f5f5f5;
  color: #666;
  padding: 0 0 0 40rpx ;
  box-sizing: border-box;
}
.account {
  text-align: right;
  padding-top: 80rpx;
  border-bottom: 2rpx solid #ccc;
}
.account view{
  display: inline-block;
  padding: 20rpx;
}
.accountPrice{
  color:red;
}
.payWay,.pay {
  position: relative;
  display: flex;
  justify-content: space-between;
  padding-right: 50rpx;
  line-height: 100rpx;
  margin-top: 10rpx;
  font-size: 34rpx;
  border-bottom: 2rpx solid #e6e6e6;
}
.payWay image{
  position: absolute;
  top:26rpx;
  right: 0;
  width: 50rpx;
  height: 50rpx;
}
.btn-container{
  position:fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  background: #e6e6e6;
  font-size: 36rpx;
}
.totalCount{
  width: 35%;
  font-size: 36rpx;
  color: #000;
  text-align: center;
  line-height: 120rpx; 
}
.totalCount text {
  color: red;
}
.buy {
  color: #fff;
  background: red;
  line-height: 120rpx; 
  text-align: center;
  width: 30%;
}
