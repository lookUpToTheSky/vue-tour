.info-container {
  width: 100%;
  height: 100%;
  background: #f5f5f5;
}
.userInfo{
  width: 100%;
  height: 160rpx;
  background: #fff;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding: 0 40rpx;
}
.userInfo text{
  line-height: 160rpx;
  font-size: 40rpx;
}
.userInfo image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin: 26rpx 40rpx;
  overflow: hidden;
}
.baseInfo{
  margin-bottom: 20rpx;
}
.baseInfo .title {
  margin-top:20rpx;
  line-height: 80rpx;
  padding: 0 40rpx;
  font-weight: 500;
  background: #fff;
}
.chooseSex {
  font-size: 36rpx;
  margin-top:50rpx;
}
.chooseSex label{
  margin: 10rpx;
}

.born-container {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 1200rpx;
  background: rgba(0, 0, 0, .6)
}
.opt-btn{
  position: absolute;
  left: 0;
  top: 0;
  z-index: 999;
  line-height: 100rpx;
  width: 100%;
  color: green;
  font-weight: 600;
  display: flex;
  justify-content: space-between;
  box-sizing: border-box;
  padding-right: 80rpx;
  background: #fff;
}
.born-container picker-view{
  position: fixed;
  bottom: 0;
  left:0;
  z-index: 999;
  width: 100%;
  min-height:500rpx;
  background:#fff;
  padding-left: 80rpx;
  box-sizing: border-box;
}
.born-container picker-view view{
  line-height: 60rpx;
}
.saveInfo {
  width: 100%;
  height: 100rpx;
  margin: 0 auto;
  line-height: 100rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 46rpx;
  font-weight: 500;
  color: #fff;
  background: red;
}