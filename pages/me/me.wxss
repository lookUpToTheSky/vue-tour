.user-container{
  width: 100%;
  height: auto;
  background: #f5f5f5;
}
.user-header{
  width: 100%;
  height: 300rpx;
  display: flex;
  padding: 20rpx;
  box-sizing: border-box;
  background: -webkit-linear-gradient(left,orange,orangered)
}
.portrait{
  width: 120rpx;
  height: 120rpx;
  border: 10rpx solid #ccc;
  overflow: hidden;
  border-radius: 50%;
}
.user-header button{
  position: relative;
  width: 60rpx;
  height: 60rpx;
  border: none !important;
  margin: 60rpx 0;
}
.user-header button image{
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  left: 0;
  top:0;
}
.user-header .userName{
  display: block;
  margin: 80rpx 30rpx;
  width: auto;
  color: #fff;
}
.user-order{
  width: 100%;
  height: auto;
  position: relative;
  top:-20rpx;
  background: #fff;
  border-radius: 20rpx;
}
.title{
  font-size: 32rpx;
  width: 100%;
  height: 40rpx;
  line-height: 50rpx;
  padding: 20rpx;
  border-bottom: 2rpx solid #ccc;
  font-weight: 700;
}
.order-container{
  width: 100%;
  padding: 40rpx 0;
  display: flex;
  justify-content: space-around;
  box-sizing: border-box;
  font-size: 28rpx;
  text-align: center;
  color:#6e6e6e;
}
.order-container>view{
  display: flex;
  flex-direction: column;
}
.order-container image{
  margin-left: 10rpx;
  width: 60rpx;
  height: 60rpx;
}
.user-address{
  display: flex;
  background: #fff;
  border-bottom: 2rpx solid #ccc;
}
.editorInfo {
  border-bottom: 2rpx solid #ccc;
}
.editorInfo button{
  display: flex;
  border: none !important;
  padding: 0 !important;
  color: #000;
  background: #fff;
}
.editorInfo text {
  text-align: left;
  flex: 1;
}
.user-address text{
  line-height: 80rpx;
  font-size: 36rpx;
  flex: 1;
}
.user-address image, .editorInfo image {
  padding: 20rpx;
  width: 50rpx;
  height: 50rpx;
}