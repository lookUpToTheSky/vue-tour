/* components/hot/index.wxss */
.petInfo {
  position: relative;
  float: left;
  width: 45%;
  height: 380rpx;
  background: #fff;
  margin: 20rpx 0 0 20rpx;
  border-radius: 20rpx;
  border: 2rpx solid #ccc;
  overflow: hidden;
}
image {
  width: 100%;
  height: 270rpx;
}
.name {
  font-size:32rpx;
  text-align: center;
}
.price {
  color: red;
  margin-left: 20rpx;
}
.hotNum {
  color: rgb(75, 68, 68);
  font-size: 24rpx;
  padding-left: 20rpx;
}
.flag {
  position: absolute;
  top: 0;
  left: 0;
  width:80rpx;
  height: 40rpx;
  font-size: 24rpx;
  color:#fff;
  text-align: center;
  border-radius: 0 0 20rpx 0;
  background: red;
}




