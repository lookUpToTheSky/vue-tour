.category-container {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  z-index: 99;
  background: rgba(0, 0, 0, .5);
}
.category-list {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 35%;
  height: 100%;
  overflow: hidden;
  background: #fff;
}
.totalGoods, .title {
  width: 100%;
  height: 100rpx;
  padding-top: 40rpx; 
  line-height: 100rpx;
  padding-left: 30rpx; 
  font-weight: 600;
  border-bottom:8rpx solid #f5f5f5;
  color:orangered;
}
.goodsList {
  display: flex;
  flex-direction: column;
}
.title {
  color: #000;
  font-weight: 550;
}
.list {
  padding-left: 30rpx; 
  height: 100rpx;
  line-height: 100rpx;
  color:#6e6e6e;
  font-size: 34rpx;
}