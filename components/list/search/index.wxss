.list_container {
  width: 100%;
  height: 100rpx;
  display: flex;
  margin-top: 10rpx;
  background: #f5f5f5;
  border:2rpx solid #e6e6e6;
}
.list_category {
  width: 60rpx;
  height: 100rpx;
  font-size: 30rpx;
  display: flex;
  color:#6e6e6e;
  margin:0 20rpx;
  flex-direction: column;
  justify-content: center;
}
.list_category image {
  width: 60rpx;
  height: 50rpx;
} 
.list_search {
  display: flex;
  flex: 1;
  height: 100rpx;
}
.list_search icon {
  margin: 32rpx 20rpx;
}
.list_search input {
  height: 100rpx;
  line-height: 100rpx;
}
