.comment-container{
  width: 100%;
  background: #fff;
}
.comment-tit{
  position: relative;
  display: flex;
  justify-content: space-between;
  padding: 0 60rpx 0 40rpx;
  margin-top: 40rpx;
  font-size:36rpx;
  align-items: center;
}
.comment-tit image {
  position: absolute;
  width: 50rpx;
  height: 50rpx;
}
.comment-con{
  width: 100%;
  white-space: nowrap;
}
.comment-item{
  height: 250rpx;
  width: 400rpx;
  border:2rpx solid #ccc;
  margin: 20rpx;  
  padding: 20rpx;
  box-sizing: border-box;
  background: #f5f5f5;
  font-size: 32rpx;
  white-space: normal;
  display: inline-block;
  overflow: hidden;
}
.userName {
  width:100%;
  height: 60rpx;
  display: flex;
  margin-top:20rpx; 
}
.userName image{
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
