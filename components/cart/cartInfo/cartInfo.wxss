.cart-container{
  width:100%;
  background: #f5f5f5;
  padding: 10rpx;
}
.goodsInfo {
  position: relative;
  width: 95%;
  height: 200rpx;
  overflow: hidden;
  box-sizing: margin-box;
  margin:20rpx 10rpx; 
  padding: 20rpx 0;
  background: #fff;
  border-radius: 20rpx;
}
.goodsInfo image:first-child {
  float: left;
  margin:10% 10rpx;
  width: 50rpx;
  height: 50rpx;
}
.goodsInfo image:nth-child(2){
  float: left;
  width: 200rpx;
  height: 200rpx;
}
.info {
  display: flex;
  flex-direction: column;
  padding-left:20rpx;
  
}
.goodsInfo .name{
  width: 400rpx;
  height: 60rpx;
  font-size: 36rpx;
}
.goodsInfo .dele{
  color:red;
  font-size: 32rpx;
  width: 70rpx;
  line-height: 60rpx;
  align-self: flex-end;
  margin-right: 20rpx;
}
.goodsInfo .price{
  width: 200rpx;
  line-height: 80rpx;
  font-size: 34rpx;
  color:red;
}
.buyNum{
  display: flex;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
  box-sizing: border-box;
  border-top:2rpx solid #ccc;
  border-bottom:2rpx solid #ccc;
}
.buyNum view{
  display: block;
  float: left;
  width: 54rpx;
  line-height: 54rpx;
  text-align: center;
  border-right:2rpx solid #ccc;
  border-left:2rpx solid #ccc;
}
.buyNum .noChange{
  background: #ccc;
}
.buyNum input{
  float:left;
  width: 60rpx;
  text-align: center;
  font-size: 30rpx;
} 
.btn-container{
  position:fixed;
  bottom: 0;
  left: 0;
  z-index: 999;
  width: 100%;
  height: 120rpx;
  display: flex;
  justify-content: space-between;
  background: #e6e6e6;
  font-size: 36rpx;
}
.selectedAll{
  position: relative;
  width: 150rpx;
  line-height: 120rpx;
  overflow: hidden;
  text-align: right;
}
.selectedAll image{
  position: absolute;
  left: 20rpx;
  top: 30rpx;
  width: 50rpx;
  height: 50rpx;
}
.clear {
  color: red;
  line-height: 120rpx;
  width: 80rpx;
  margin-left: 20rpx;
}
.totalCount{
  width: 35%;
  font-size: 28rpx;
  color: #000;
  text-align: center;
  line-height: 120rpx; 
}
.totalCount text {
  font-size: 38rpx;
  color:orangered;
}
.buy {
  color: #fff;
  background: red;
  line-height: 120rpx; 
  text-align: center;
  width: 30%;
}
