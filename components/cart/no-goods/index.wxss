.container{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80rpx 0;
}
.container image{
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
}
.container view:first-child{
  font-size: 40rpx;
}
.container view:nth-child(3){
  font-size: 30rpx;
  line-height: 50rpx;
  color:#666;
}
.container button {
  margin-top: 40rpx;
  color: red;
  background: #f5f5f5;
  font-size: 36rpx;
  box-sizing: border-box;
  overflow: hidden;
}