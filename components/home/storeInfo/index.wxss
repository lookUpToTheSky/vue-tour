/* components/address/index.wxss */
.container {
  width: 100%;
  line-height: 40rpx;
  background:#fff;
  font-size: 28rpx;
  border-bottom:2rpx solid #ccc;
}
.title {
  text-align: center;
  height:80rpx;
  color: #000;
  font-size: 36rpx;
  font-weight: bolder;
  line-height:80rpx;
  border-bottom:2rpx solid #ccc;
}
.info {
  padding-left:40rpx;
}
.info icon {
  width: 36rpx;
  height: 40rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
button {
  width: 80%;
  color:#fff;
  background:red;
  margin: 40rpx auto;
  line-height: 80rpx;
}

